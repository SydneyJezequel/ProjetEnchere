<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>ProjetEnchere</display-name>


  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  
  
  <!-- Servlets -->
  <servlet>
  <servlet-name>Connexion</servlet-name>
  <servlet-class>fr.eni.projetenchere.servlet.Connexion</servlet-class>
  </servlet>
    <servlet-mapping>
  	<servlet-name>Connexion</servlet-name>
  	<url-pattern>/connexion</url-pattern>			
  </servlet-mapping>
  
  
  <!-- Jsp -->
  
  <servlet>
  	<servlet-name>ConnexionJSP</servlet-name>
  	<jsp-file>/WEB-INF/jsp/Connexion.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ConnexionJSP</servlet-name>
  	<url-pattern>/accueil</url-pattern>			
  </servlet-mapping>
  
    <servlet>
  	<servlet-name>AccueilAdministrateur</servlet-name>
  	<jsp-file>/WEB-INF/jsp/AccueilAdmin.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AccueilAdministrateur</servlet-name>
  	<url-pattern>/administrateur</url-pattern>
  </servlet-mapping>
  
      <servlet>
  	<servlet-name>AccueilUtilisateur</servlet-name>
  	<jsp-file>/WEB-INF/jsp/AccueilUtilisateur.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AccueilUtilisateur</servlet-name>
  	<url-pattern>/utilisateur</url-pattern>
  </servlet-mapping>
  
  
          <servlet>
  	<servlet-name>Inscription</servlet-name>
  	<jsp-file>/WEB-INF/jsp/Inscription.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Inscription</servlet-name>
  	<url-pattern>/sinscrire</url-pattern>
  </servlet-mapping>
  
  
            <servlet>
  	<servlet-name>Test</servlet-name>
  	<jsp-file>/WEB-INF/jsp/Test.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Test</servlet-name>
  	<url-pattern>/test</url-pattern>
  </servlet-mapping>
  
  
</web-app>